{
  "name": "jazzene",
  "private": true,
  "type": "module",
  "scripts": {
    "check_all": "npm run format && npm run check && npm run test && npm run build && npm run test:e2e",
    "check": "moon check src && moon fmt --check",
    "format": "NEW_MOON_PKG=1 moon fmt",
    "test": "moon test -p internal/jazzene/music internal/jazzene/music/generator --target wasm-gc",
    "test:e2e": "playwright test",
    "dev": "vite",
    "start": "npm run dev -- --open",
    "build": "moon build && vite build",
    "tunnel": "cloudflared tunnel --url localhost:5173"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@tailwindcss/vite": "^4.1.18",
    "tailwindcss": "^4.0.2",
    "vite": "^7.3.1",
    "vite-plugin-moonbit": "^0.1.3"
  }
}
